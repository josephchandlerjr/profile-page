<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">What would you like to say about <%= campground.name %>?</h1>
		<div style="width:30%; margin: 30px auto;">
			<form method="POST" action="/yelpcamp/campgrounds/<%=campground._id%>/comments/">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block"type="submit">Add Comment</button>
				</div>
			</form>

			<a href="/yelpcamp/campgrounds/<%=campground._id%>">Go Back</a>
		</div>	
	</div>
</div>


<% include ../partials/footer %>