<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit Comment for <%= campground.name %></h1>
		<div style="width:30%; margin: 30px auto;">
			<form method="POST" action="/campgrounds/<%= campground._id %>/comments/<%=comment.id %>?_method=PUT">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" >
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block"type="submit">Edit Comment</button>
				</div>
			</form>

			<a href="/campgrounds/<%=campground._id%>">Go Back</a>
		</div>	
	</div>
</div>


<% include ../partials/footer %>